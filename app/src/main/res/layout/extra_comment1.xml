<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/biankuang"
                android:padding="10dp">

    <ViewStub
        android:id="@+id/extra_view"
        layout="@layout/extra_comment1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/brief_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网易火星网友"
        android:textColor="@color/id_color"
        />

    <TextView
        android:id="@+id/brief_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="1"
        />

    <TextView
        android:id="@+id/brief_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/brief_id"
        android:layout_toLeftOf="@+id/brief_count"
        android:text="@string/comment"
        />
